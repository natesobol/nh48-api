# Peak routes handled by Cloudflare Worker
# These redirects serve as fallback if worker is disabled

# Legacy /guest/ URLs - redirect to /peak/
/guest/* /peak/:splat 301
/fr/guest/* /fr/peak/:splat 301

# Main peak routes
/peak/* /pages/nh48_peak.html 200
/fr/peak/* /pages/nh48_peak.html 200

# Alternative /peaks/ URL (plural)
/peaks/* /peak/:splat 301
/fr/peaks/* /fr/peak/:splat 301

# Legacy trails page
/trails.html /trails/ 301

# Game routes
/peakid-game /peakid-game.html 200
/timed-peakid-game /timed-peakid-game.html 200
/peakid-timed /timed-peakid-game.html 200

# Virtual hike routes
/virtual-hike /pages/virtual_hike.html 200
/virtual-hike/ /pages/virtual_hike.html 200
/virtual_hike.html /virtual-hike 301

# Photos hub route
/photos /photos/ 301
/photos/ /photos/index.html 200
